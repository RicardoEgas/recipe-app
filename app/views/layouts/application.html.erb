<!DOCTYPE html>
<html>
  <head>
    <title>RecipeApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
   <header>

      <nav >
        <div >
          <div >
            <ul >
              <% if user_signed_in? %>
                <li >
                  <%= link_to "My recipes", recipes_path %>
                </li>
                <li >
                  <%= link_to "My foods", foods_path %>
                </li>
                <li >
                  <%= link_to "New recipe", new_recipe_path %>
                </li>
                <li>
                <%= link_to 'Public Recipes', public_recipes_path %>
                </li>
              <% end %>
              <% if current_user %>
                  <li >
                    <%= link_to "Logout", destroy_user_session_path, method: :delete, 'data-turbo-method': :delete %>
                  </li>
                <% else %>
                  <li >
                    <%= link_to "Log in", new_user_session_path %>
                  </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <main>
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <%= yield %>
    </main>
  </body>
</html>



