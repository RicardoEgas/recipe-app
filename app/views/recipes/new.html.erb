<%= form_with url: "/recipes", model: @recipe do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :preparation_time %>
    <%= form.text_field :preparation_time %>
  </div>
  <div>
    <%= form.label :cooking_time %>
    <%= form.text_field :cooking_time %>
  </div>
  <div>
    <%= form.label :description %>
    <%= form.text_field :description %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>